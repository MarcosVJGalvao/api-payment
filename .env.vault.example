# Application Configuration
PORT=3000
NODE_ENV=production
TIME_ZONE=America/Sao_Paulo

# Security / Secrets Source
# Sets the application to fetch sensitive data from OCI Vault
SECRETS_SOURCE=VAULT

# Database Configuration
# Sensitive fields (HOST, PORT, USERNAME, PASSWORD) are fetched from Vault
DB_DATABASE=api_payments
DB_SSL_MODE=disable # disable, require, verify-ca, verify-full
TYPEORM_SYNCHRONIZE=false

# Redis Configuration
# REDIS_PASSWORD and UPSTASH_REDIS_URL are fetched from Vault if present there
REDIS_MODE=local
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL=3600

# Authentication & Security
# JWT_SECRET is fetched from Vault
SENSITIVE_FIELDS=password,token,secret,cpf,cnpj,creditCard

# Logging Configuration
LOG_LEVEL=info
LOG_DESTINATION=cloud # Suggested for Vault/Prod environments
CLOUD_LOGGING_PROVIDER=oci

# Audit Configuration
AUDIT_ALERT_ENABLED=true

# OCI (Oracle Cloud Infrastructure) & Vault Configuration
# REQUIRED for SECRETS_SOURCE=VAULT
OCI_REGION=us-ashburn-1
OCI_CONFIG_FILE=~/.oci/config
OCI_PROFILE=DEFAULT
VAULT_OCID=ocid1.vault.oc1...
VAULT_COMPARTMENT_OCID=ocid1.compartment.oc1...
# VAULT_REGION=us-ashburn-1 (Use if different from OCI_REGION)

# Secrets Managed by Vault (Do NOT include these in .env when SECRETS_SOURCE=VAULT):
# - DB_HOST
# - DB_PORT
# - DB_USERNAME
# - DB_PASSWORD
# - JWT_SECRET
# - REDIS_PASSWORD
# - UPSTASH_REDIS_URL
# - R2_SECRET_ACCESS_KEY
# - R2_ACCESS_KEY_ID
# - R2_ACCOUNT_ID
# - WEBHOOK_ENCRYPTION_KEY

# OCI Logging Configuration (if LOG_DESTINATION=cloud/both)
# OCI_LOGGING_LOG_GROUP_OCID=ocid1.loggroup.oc1...
# OCI_LOGGING_LOG_ID=ocid1.log.oc1...
# OCI_LOGGING_COMPARTMENT_OCID=ocid1.compartment.oc1...
